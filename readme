#in terminal 1 (for 1st run)
cd RadarSimulationMicroservice 
mvn clean install -o -s settings.xml

#in terminal 2 (for 1st run)
cd node_modules/live-server 
npm install -g
cd ../..
live-server --port=8000

# if above dount work use python3 -m http.server 8000
# if above dount work use the vsc live server


